{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "wrangler --config ./wrangler.jsonc deploy --dry-run",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "NODE_ENV=development wrangler dev --port=3000",
    "email": "email dev",
    "start": "wrangler dev",
    "deploy": "wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:push": "drizzle-kit push",
    "db:studio": "cross-env LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:local": "wrangler --config ./wrangler.jsonc d1 migrations apply kedai-db --local",
    "db:migrate:production": "wrangler --config ./wrangler.jsonc d1 migrations apply kedai-db"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.856.0",
    "@aws-sdk/s3-request-presigner": "^3.856.0",
    "@better-auth/expo": "^1.3.0",
    "@better-auth/stripe": "^1.3.4",
    "@hono/trpc-server": "^0.4.0",
    "@libsql/client": "^0.15.9",
    "@react-email/components": "^0.3.2",
    "@trpc/client": "^11.4.2",
    "@trpc/server": "^11.4.2",
    "better-auth": "^1.3.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.2",
    "nanoid": "^5.1.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "slug": "^11.0.0",
    "stripe": "^18.0.0",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19",
    "@types/slug": "^5.0.9",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.2",
    "react-email": "4.2.7",
    "tsdown": "^0.12.9",
    "typescript": "^5.8.2",
    "wrangler": "^4.23.0"
  }
}
